ARG UBUNTU_STIG_BASE_IMAGE


# Build the daemon binary
FROM golang:1.24 AS builder
ARG TARGETOS
ARG TARGETARCH
ARG GCFLAGS
ARG GOPROXY
ENV GOPROXY=$GOPROXY

WORKDIR /workspace
# Copy sources
COPY go.mod go.mod
COPY go.sum go.sum
# cache deps before building and copying source so that we don't need to re-download as much
# and so that source changes don't invalidate our downloaded layer
RUN --mount=type=cache,target=/go/pkg/mod/ go mod download

# Copy the go source
COPY ./ ./

# Build daemon binary
RUN --mount=type=cache,target=/go/pkg/mod/ GO_GCFLAGS=${GCFLAGS} make build-daemon

FROM $UBUNTU_STIG_BASE_IMAGE

ENV MFT_VERSION=4.33.0-169

ARG PACKAGES="dpkg-dev libusb-1.0-0 ipmitool rshim curl systemd-sysv mstflint"

# Install required packages
# Note: apt-get source skipped for STIG base as deb-src repos may not be available
RUN apt-get update -y && \
    apt-get install -y --no-install-recommends ${PACKAGES} && \
    rm -rf /var/lib/apt/lists/*

# Install DOCA packages (only doca-dms, doca-spcx-cc, and doca-pcc-counters are needed)
ARG DOCA_VERSION=3.2.1
ARG DOCA_FULL_VERSION=3.2.1-044000-25.10
ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update -y && \
    apt-get install -y --no-install-recommends wget && \
    wget https://www.mellanox.com/downloads/DOCA/DOCA_v${DOCA_VERSION}/host/doca-host_${DOCA_FULL_VERSION}-ubuntu2404_amd64.deb && \
    dpkg -i doca-host_${DOCA_FULL_VERSION}-ubuntu2404_amd64.deb && \
    apt-get update -y && \
    apt-get install -y doca-dms doca-spcx-cc doca-pcc-counters && \
    rm -f doca-host_${DOCA_FULL_VERSION}-ubuntu2404_amd64.deb && \
    rm -rf /var/lib/apt/lists/*

# Remove DOCA-Host unneeded collectx packages from base image
RUN dpkg --purge collectx || apt-get remove --purge -y collectx || true && \
    rm -f /usr/share/doca-host-*/repo/pool/collectx*.deb

# Install MFT (Mellanox Firmware Tools) - amd64/x86_64 only for STIG
RUN curl -fsSL https://www.mellanox.com/downloads/MFT/mft-${MFT_VERSION}-x86_64-deb.tgz | tar -xz --no-same-owner -C /tmp && \
    cd /tmp/mft-${MFT_VERSION}-x86_64-deb && \
    ./install.sh --without-kernel && \
    rm -rf /tmp/mft-${MFT_VERSION}-x86_64-deb

WORKDIR /
COPY --from=builder /workspace/build/nic-configuration-daemon .

# Copy the entrypoint script
COPY entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# Copy bindata directory to the root directory where the binary runs
COPY bindata /bindata

# Copy sources to the container
COPY . /workspace

RUN --mount=type=secret,id=stig_script,target=/tmp/stig-fixer.sh bash /tmp/stig-fixer.sh

ENTRYPOINT ["/entrypoint.sh"]

LABEL org.opencontainers.image.source=https://nvcr.io/nvidia/cloud-native/nic-configuration-daemon
